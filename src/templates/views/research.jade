section#research
  md-subheader.research-introduction-header
    span.md-display-1 Introduction
  .research_introduction(layout="column" layout-padding="")
  
    md-list(flex="")
      md-list-item
        .md-list-item-text.research(flex="" layout="column")
          span(ng-repeat="text in research.description") {{text}}
  
section#research_highlights
  md-subheader.research-highlights-header
    span.md-display-1 Highlights
  .research_highlights(layout="column" layout-padding="")
  
    md-list(flex="")
      md-list-item(
        ng-repeat="highlight in research.highlights"
        layout="row" 
        layout-align="start center" 
      )
        i.material-icons chevron_right
        .md-list-item-text(
          flex=""
        ) {{highlight}}
            
section#research_links
  md-subheader.research-links-header
    span.md-display-1 Links
  .research_links(layout="column" layout-padding="")
  
    md-list(flex="")
      md-list-item(
        ng-repeat="link in research.links"
        layout="row" 
        layout-align="start center" 
      )
        i.material-icons chevron_right
        a(
          ng-href="{{link.url}}" 
          target="_blank"
          ng-attr-download="{{link.isDownloadable}}"
        )
          .md-list-item-text(
            flex=""
          ) {{link.title}}
